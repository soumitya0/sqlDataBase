<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="25dp">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/et_frist_name"
    android:hint="first_name"
    android:textSize="20dp"/>
    <EditText
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_last_name"
        android:layout_below="@+id/et_frist_name"
        android:hint="last_name"/>
    <EditText
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_marks"
        android:hint="marks"
        android:layout_below="@+id/et_last_name"/>
    <EditText
        android:textSize="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_id"
        android:hint="id"
        android:layout_below="@+id/et_marks"/>


    <Button
        android:textSize="20dp"
        android:id="@+id/btn_add"
        android:text="add"

        android:layout_below="@id/et_id"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:textSize="20dp"
        android:id="@+id/btn_viewAll"
        android:layout_toRightOf="@+id/btn_add"
        android:text="ViewAll"
        android:layout_below="@id/et_id"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:textSize="20dp"
        android:id="@+id/btn_UpDate"

        android:text="UpDate"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/btn_add"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:textSize="20dp"
        android:id="@+id/btn_delete"
        android:text="delete"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/btn_viewAll"
        android:layout_toRightOf="@+id/btn_UpDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />






</RelativeLayout>